<Project Sdk="Microsoft.NET.Sdk.Web">

  <Import Project="$(ProjectDir)codegen.targets" />

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <AspNetCoreHostingModel>InProcess</AspNetCoreHostingModel>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <UseRazorBuildServer>false</UseRazorBuildServer>
    <TieredCompilation>true</TieredCompilation>
  </PropertyGroup>

  <PropertyGroup>
    <HQEndpoint>https://build.hq.io</HQEndpoint>
    <HQKey>PRIVATE-KEY-REPLACE-ME</HQKey>
    <HQApplicationId>APPLICATION-ID-REPLACE-ME</HQApplicationId>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="seed.json" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="UI\" />
    <Folder Include="runtime\Filters\" />
    <Folder Include="runtime\Attributes\" />
    <Folder Include="runtime\Models\" />

    <!-- Default UI -->
    <Compile Include="..\..\..\HQ.Labs\src\HQ.UI\**\*.cs" Exclude="..\..\..\HQ.Labs\src\HQ.UI\obj\**\*" Link="UI\%(RecursiveDir)%(Filename)%(Extension)" />

    <!-- Serverless Runtime -->
    <Compile Include="..\..\..\HQ.Labs\src\HQ.Platform.Runtime.Rest\src\HQ.Platform.Runtime.Rest\Attributes\**\*.cs" Link="runtime\Attributes\%(RecursiveDir)%(Filename)%(Extension)" />
    <Compile Include="..\..\..\HQ.Labs\src\HQ.Platform.Runtime.Rest\src\HQ.Platform.Runtime.Rest\Filters\**\*.cs" Link="runtime\Filters\%(RecursiveDir)%(Filename)%(Extension)" />
    <Compile Include="..\..\..\HQ.Labs\src\HQ.Platform.Runtime.Rest\src\HQ.Platform.Runtime.Rest\Models\**\*.cs" Link="runtime\Models\%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>

  <!--#if(false)-->
  <PropertyGroup>
    <DefineConstants>Sqlite;AppInsights</DefineConstants>
    <AppInsights>true</AppInsights>
    <Azure>true</Azure>
    <DevTemplate>true</DevTemplate>
  </PropertyGroup>
  <!-- #endif -->

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.App" Version="2.2.5" />
    <ProjectReference Include="..\HQ\HQ.csproj" />
  </ItemGroup>

  <!-- Azure -->
  <ItemGroup>
    <PackageReference Include="Microsoft.ApplicationInsights.AspNetCore" Version="2.6.1" Condition="'$(AppInsights)'=='true'" />
    <PackageReference Include="Microsoft.AspNetCore.ApplicationInsights.HostingStartup" Version="2.2.0" Condition="'$(AppInsights)'=='true'" />
    <PackageReference Include="Microsoft.Extensions.Logging.ApplicationInsights" Version="2.9.1" Condition="'$(AppInsights)'=='true'" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="Use.cs" Link="content\Use.cs" />
    <Content Update="Add.cs" Link="content\Add.cs" />
  </ItemGroup>

  <!--#if(false)-->
  <Target Name="PublishBinariesToNuGet" AfterTargets="Pack" Condition="'$(Configuration)'=='Package'">
    <Exec Command="dotnet nuget push &quot;$(TargetDir)..\$(PackageId).$(PackageVersion).nupkg&quot; -s https://www.nuget.org/api/v2/package" />
  </Target>
  <ItemGroup>
    <Content Include="**\*.*" Exclude="bin\**;obj\**;*.nuspec;*.bat;*.user">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Update="**\*.*" Link="content\%(RecursiveDir)%(Filename)%(Extension)">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <None Update="HQ.Template.sln;pack.bat;.template.config\template.json;*.targets">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <PropertyGroup>
    <Configurations>Debug;Release;Package</Configurations>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IsPackable>true</IsPackable>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.0.15</Version>
    <Company>HQ.IO Corporation</Company>
    <Authors>HQ.IO Corporation</Authors>
    <Copyright>Â© $([System.DateTime]::Now.Year) HQ.IO Corporation</Copyright>
    <EnableDefaultContentItems>false</EnableDefaultContentItems>
    <PackageLicenseExpression>RPL-1.5</PackageLicenseExpression>
    <PackageIconUrl>https://raw.githubusercontent.com/hq-io/Shared/master/assets/320x320.png</PackageIconUrl>
    <PackageTags>hq hq-io dotnet-standard serverless platform</PackageTags>
    <PackageType>template</PackageType>
    <PackageProjectUrl>https://hq.io</PackageProjectUrl>
    <Description>HQ.io Web Application</Description>
    <RepositoryUrl>https://github.com/hq-io/$(MSBuildProjectName)</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>
  <!--#endif-->

</Project>
 