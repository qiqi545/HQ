{
  "$schema": "http://json.schemastore.org/template",
  "author": "HQ.IO Corporation",
  "classifications": [ "HQ" ],
  "identity": "HQ",
  "name": "HQ",
  "shortName": "hq",
  "tags": {
    "language": "C#"
  },
  "sourceName": "HQ.Template",
  "preferNameDirectory": true,
  "primaryOutputs": [
    { "path": "HQ.Template.csproj" },
    { "path": "HQ.Template.sln" }
  ],
  "guids": [
    "79444781-327F-44A0-B1B6-E7C6297C5CCB",
    "9A19103F-16F7-4668-BE54-9A1E7A4F7556",
    "9B8316F4-6D55-4917-A18B-34F64DA84CFB"
  ],
  "symbols": {
    "key": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "replaces": "PRIVATE-KEY-REPLACE-ME",
      "description": "This is your private key. It must match the key provided by your HQ.io Administrator. This key is used for signing, as well as for accessing the code generation service."
    },
    "db": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": true,
      "choices": [
        {
          "choice": "cosmos-db",
          "description": "Microsoft Azure DocumentDB"
        },
        {
          "choice": "sql-azure",
          "description": "Microsoft SQL Azure"
        },
        {
          "choice": "sql-server",
          "description": "Microsoft SQL Server"
        },
        {
          "choice": "sqlite",
          "description": "SQLite"
        }
      ],
      "defaultValue": "sqlite",
      "description": "The storage technology used to persist permanent objects."
    },
    "port": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "replaces": "7070",
      "description": "The port to use for HTTPS communication. The default is 7070."
    },
    "appInsightsKey": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "replaces": "APP-INSIGHTS-KEY-REPLACE-ME",
      "description": "This is your Azure Application Insights instrumentation key. This will be used to configure the node with Application Insights telemetry."
    },
    "DocumentDb": {
      "type": "computed",
      "value": "(db == \"cosmos-db\")"
    },
    "SqlServer": {
      "type": "computed",
      "value": "(db == \"sql-server\" || db == \"sql-azure\")"
    },
    "SqlAzure": {
      "type": "computed",
      "value": "(db == \"sql-azure\")"
    },
    "Azure": {
      "type": "computed",
      "value": "(db == \"sql-azure\" || db == \"cosmos-db\")"
    },
    "Sqlite": {
      "type": "computed",
      "value": "(db == \"sqlite\")"
    },
    "AppInsights": {
      "type": "computed",
      "value":  "(appInsightsKey != null)" 
    } 
  }
}
