<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(ProjectDir)..\..\build\package.props" />
  <Import Project="$(ProjectDir)..\..\build\build.props" />

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <Configurations>Debug;Release;Package</Configurations>
    <OutputType>Exe</OutputType>
    <StartupObject>HQ.Build.Program</StartupObject>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>hq</ToolCommandName>
    <License>RPL-1.5</License>
    <Copyright>Copyright Â© HQ.IO Corporation. All rights reserved.</Copyright>
    <RequireLicenseAcceptance>true</RequireLicenseAcceptance>
  </PropertyGroup>

  <PropertyGroup>
    <Description>HQ build tools.</Description>
    <Version>0.0.12</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HQ\HQ.csproj" />
  </ItemGroup>

</Project>
